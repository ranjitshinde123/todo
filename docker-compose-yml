services:
  postgres:
    image: "postgres:latest"
    environment:
      - POSTGRES_DB=mydatabase
      - POSTGRES_USER=user99
      - POSTGRES_PASSWORD=Tiger@123
    volumes:
      - pg_data:/var/lib/postgresql/data/
  django:
    build: .
    command: python /code/manage.py runserver 0.0.0.0:8000
    volumes:
      - .:/app
    ports:
      - 8000:8000
    depends_on:
      - postgres